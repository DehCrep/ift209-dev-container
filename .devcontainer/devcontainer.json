{
    "name": "armdevenv",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.makefile-tools",
                "Arm.armls"
            ],
            "settings": {
                "files.associations": {
                    "*.as": "arm.aarch64-assembly"
                },
                "armls.diagnostics.disableCategories": [
                    "tooManyOperands",
                    "invalidOperand",
                    "tooFewOperands",
                    "unrecognisedInstruction"
                ],
                "debug.allowBreakpointsEverywhere": true
            }
        }
    }
}